import java.io.*;
import java.net.*;
import java.util.*;

public class D_message {
	
	

		private int deliveryTime;//accept time
		private int delay;
		private Pair message;  // key-value message
		private int from;
		private int to;

		public D_message(int deli, int d, Pair m, int f, int t) {
			deliveryTime = deli;
			delay = d;
			message = m;
			from = f;
			to = t;
		}

		public String getMessage() {
			return message;
		}

		public void run() {
			try {
				from.getThread_send.sleep(delay);
			} catch (InterruptedException e) {
				System.exit(1);
			}
			
			//and sending issues.
			
		}
	
}
